<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета розовой темы -->
    <Color x:Key="BackgroundColor">#FFFFF0F5</Color>
    <!-- LavenderBlush -->
    <Color x:Key="ForegroundColor">#FF8B4789</Color>
    <!-- Темно-розовый для текста -->
    <Color x:Key="AccentColor">#FFFF69B4</Color>
    <!-- HotPink -->
    <Color x:Key="HeaderBackgroundColor">#FFFFF8FB</Color>
    <!-- Очень светлый розовый -->
    <Color x:Key="HeaderBorderColor">#FFFFD1DC</Color>
    <!-- Светло-розовая граница -->
    <Color x:Key="CardBackgroundColor">#FFFFFFFF</Color>
    <!-- Белый для карточек -->
    <Color x:Key="CardBorderColor">#FFFFE4E9</Color>
    <!-- Розовая граница карточек -->
    <Color x:Key="LoginButtonColor">#FFFF69B4</Color>
    <!-- HotPink -->
    <Color x:Key="LoginButtonHoverColor">#FFFF1493</Color>
    <!-- DeepPink -->
    <Color x:Key="LoginButtonPressedColor">#FFC71585</Color>
    <!-- MediumVioletRed -->
    <Color x:Key="SunIconColor">#FFFFB6C1</Color>
    <!-- LightPink -->
    <Color x:Key="MoonIconColor">#FFDB7093</Color>
    <!-- PaleVioletRed -->
    <Color x:Key="HintTextColor">#FFB76E79</Color>
    <!-- Приглушенный розовый для подсказок -->

    <!-- SolidColorBrush определения -->
    <SolidColorBrush x:Key="WindowBackground" Color="{DynamicResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ContentBackground" Color="{DynamicResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}"/>
    <SolidColorBrush x:Key="HeaderBackground" Color="{DynamicResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBorder" Color="{DynamicResource HeaderBorderColor}"/>
    <SolidColorBrush x:Key="HeaderText" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#FFB76E79"/>
    <!-- Приглушенный розовый -->
    <SolidColorBrush x:Key="HintText" Color="{DynamicResource HintTextColor}"/>
    <!-- Цвет для подсказок -->

    <!-- Цвета для карточек -->
    <SolidColorBrush x:Key="CardBackground" Color="{DynamicResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBorder" Color="{DynamicResource CardBorderColor}"/>
    <SolidColorBrush x:Key="CardText" Color="{DynamicResource ForegroundColor}"/>
    <SolidColorBrush x:Key="CardSecondaryText" Color="#FFC8959F"/>
    <!-- Светло-розовый для второстепенного текста -->

    <!-- Цвета для кнопки входа -->
    <SolidColorBrush x:Key="LoginButtonBackground" Color="{DynamicResource LoginButtonColor}"/>
    <SolidColorBrush x:Key="LoginButtonHover" Color="{DynamicResource LoginButtonHoverColor}"/>
    <SolidColorBrush x:Key="LoginButtonPressed" Color="{DynamicResource LoginButtonPressedColor}"/>

    <!-- Цвета для иконок -->
    <SolidColorBrush x:Key="SunIconFill" Color="{DynamicResource SunIconColor}"/>
    <SolidColorBrush x:Key="SunIconStroke" Color="#FFFF69B4"/>
    <!-- HotPink обводка -->
    <SolidColorBrush x:Key="MoonIconFill" Color="{DynamicResource MoonIconColor}"/>

    <!-- Дополнительные ресурсы для DataGrid -->
    <SolidColorBrush x:Key="SelectedItemBackground" Color="#FFFFF0F5"/>
    <!-- LavenderBlush -->
    <SolidColorBrush x:Key="HoverItemBackground" Color="#FFFFF8FB"/>
    <!-- Очень светлый розовый -->

    <!-- Стиль для информационного текста -->
    <Style x:Key="InfoTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource HintText}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Стили для DataGrid -->
    <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
        <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Базовые стили -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource WindowBackground}"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Стиль для RadioButton -->
    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- Стиль для кнопок в розовой теме -->
    <Style x:Key="PinkButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="10,5"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для полей ввода в розовой теме -->
    <Style x:Key="PinkInputStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
    </Style>

    <!-- Стиль для ComboBox в розовой теме -->
    <Style x:Key="PinkComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
    </Style>

</ResourceDictionary>