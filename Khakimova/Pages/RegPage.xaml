<Page x:Class="Khakimova.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registration Page">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Регистрация" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Логин:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TextBoxLogin" Grid.Row="1" Grid.Column="1" Margin="10,5" Height="30"
                 TextChanged="TextBoxLogin_TextChanged"/>
        <Label x:Name="LabelLoginHint" Grid.Row="1" Grid.Column="2" Content="Введите логин" Foreground="Gray"
               MouseLeftButtonUp="LabelLoginHint_MouseLeftButtonUp" VerticalAlignment="Center"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Пароль:" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBoxFirst" Grid.Row="2" Grid.Column="1" Margin="10,5" Height="30"
                     PasswordChanged="PasswordBoxFirst_PasswordChanged"/>
        <Label x:Name="LabelPasswordHint" Grid.Row="2" Grid.Column="2" Content="Введите пароль" Foreground="Gray"
               MouseLeftButtonUp="LabelPasswordHint_MouseLeftButtonUp" VerticalAlignment="Center"/>

        <!-- Подтверждение пароля -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Подтвердите пароль:" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBoxSecond" Grid.Row="3" Grid.Column="1" Margin="10,5" Height="30"
                     PasswordChanged="PasswordBoxSecond_PasswordChanged"/>
        <Label x:Name="LabelPasswordSecondHint" Grid.Row="3" Grid.Column="2" Content="Повторите пароль" Foreground="Gray"
               MouseLeftButtonUp="LabelPasswordSecondHint_MouseLeftButtonUp" VerticalAlignment="Center"/>

        <!-- Роль -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Роль:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="ComboBoxRole" Grid.Row="4" Grid.Column="1" Margin="10,5" Height="30">
            <ComboBoxItem Content="User"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <!-- ФИО -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="ФИО:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TextBoxFullName" Grid.Row="5" Grid.Column="1" Margin="10,5" Height="30"
                 TextChanged="TextBoxFullName_TextChanged"/>
        <Label x:Name="LabelFullNameHint" Grid.Row="5" Grid.Column="2" Content="Введите ФИО" Foreground="Gray"
               MouseLeftButtonUp="LabelFullNameHint_MouseLeftButtonUp" VerticalAlignment="Center"/>

        <!-- Кнопка регистрации -->
        <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" x:Name="RegisterButton" 
               Content="Зарегистрироваться" Click="RegisterButton_Click" 
               Width="328" Height="NaN" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Page>