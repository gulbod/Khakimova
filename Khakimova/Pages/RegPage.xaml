<Page x:Class="Khakimova.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registration Page" Height="400" Width="600">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DictionaryDark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <!-- Login -->
        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Height="40">
            <TextBlock Text="Логин:" Margin="5" VerticalAlignment="Center" Width="150"/>
            <TextBox x:Name="txtbxLog" 
                     Background="Transparent" 
                     ToolTip="Введите логин или почту" 
                     Margin="5" 
                     VerticalAlignment="Center"
                     Width="200"
                     Height="30"
                     TextChanged="txtbxLog_TextChanged" />
            <Label x:Name="lblLogHitn" 
                   Foreground="Gray" 
                   Content="Введите логин" 
                   VerticalAlignment="Center"
                   Width="200"
                   Height="30"
                   MouseLeftButtonUp="lblLogHitn_MouseLeftButtonUp"/>
        </StackPanel>

        <!-- Password -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Height="40">
            <TextBlock Text="Пароль:" Margin="5" VerticalAlignment="Center" Width="150"/>
            <PasswordBox x:Name="passBxFrst" 
                         Background="Transparent" 
                         ToolTip="Введите пароль" 
                         Width="200" 
                         Height="30" 
                         Margin="5" 
                         VerticalAlignment="Center"
                         PasswordChanged="passBxFrst_PasswordChanged" />
            <Label x:Name="lblPassHitn" 
                   Foreground="Gray" 
                   Content="Введите пароль" 
                   VerticalAlignment="Center"
                   Width="200"
                   Height="30"
                   MouseLeftButtonUp="lblPassHitn_MouseLeftButtonUp"/>
        </StackPanel>

        <!-- Confirm Password -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="40">
            <TextBlock Text="Подтвердите пароль:" Margin="5" VerticalAlignment="Center" Width="150"/>
            <PasswordBox x:Name="passBxScnd" 
                         Background="Transparent" 
                         ToolTip="Повторите пароль" 
                         Width="200" 
                         Height="30" 
                         Margin="5" 
                         VerticalAlignment="Center"
                         PasswordChanged="passBxScnd_PasswordChanged" />
            <Label x:Name="lblPassSecHitn"
                   Foreground="Gray" 
                   Content="Повторите пароль" 
                   VerticalAlignment="Center"
                   Width="200"
                   Height="30"
                   MouseLeftButtonUp="lblPassSecHitn_MouseLeftButtonUp"/>
        </StackPanel>

        <!-- Role -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="40">
            <TextBlock Text="Роль:" Margin="5" VerticalAlignment="Center" Width="150"/>
            <ComboBox x:Name="comboBxRole" 
                      ToolTip="Выберите роль" 
                      Width="200" 
                      Margin="5" 
                      VerticalAlignment="Center"
                      Height="30">
                <ComboBoxItem Content="User" />
                <ComboBoxItem Content="Admin" />
            </ComboBox>
        </StackPanel>

        <!-- Full Name -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Height="40">
            <TextBlock Text="ФИО:" Margin="5" VerticalAlignment="Center" Width="150"/>
            <TextBox x:Name="txtbxFIO" 
                     Background="Transparent" 
                     ToolTip="Введите ФИО" 
                     Width="200" 
                     Margin="5" 
                     VerticalAlignment="Center"
                     Height="30"
                     TextChanged="txtbxFIO_TextChanged" />
            <Label x:Name="lblFioHitn" 
                   Foreground="Gray" 
                   Content="Введите ФИО" 
                   VerticalAlignment="Center"
                   Width="200"
                   Height="30"
                   MouseLeftButtonUp="lblFioHitn_MouseLeftButtonUp"/>
        </StackPanel>

        <!-- Register button -->
        <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Height="45">
            <Button x:Name="regButton" 
                    Content="Зарегистрироваться" 
                    Click="regButton_Click" 
                    Width="250"
                    Height="59"
                    ToolTip="Зарегистрировать нового пользователя"/>
        </StackPanel>
    </Grid>
</Page>