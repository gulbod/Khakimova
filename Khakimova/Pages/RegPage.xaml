<Page x:Class="Khakimova.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registration Page" Height="645" Width="567"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для комбобоксов -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для подсказок -->
        <Style x:Key="HintLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource HintText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderText}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Text="Регистрация" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Логин:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <TextBox x:Name="TextBoxLogin" 
                 Grid.Row="1" Grid.Column="1" 
                 Margin="10,5" 
                 Style="{StaticResource TextBoxStyle}"
                 TextChanged="TextBoxLogin_TextChanged"/>
        <Label x:Name="LabelLoginHint" 
               Grid.Row="1" Grid.Column="2" 
               Content="Введите логин" 
               Style="{StaticResource HintLabelStyle}"
               MouseLeftButtonUp="LabelLoginHint_MouseLeftButtonUp"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Пароль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <PasswordBox x:Name="PasswordBoxFirst" 
                     Grid.Row="2" Grid.Column="1" 
                     Margin="10,5" 
                     Style="{StaticResource PasswordBoxStyle}"
                     PasswordChanged="PasswordBoxFirst_PasswordChanged"/>
        <Label x:Name="LabelPasswordHint" 
               Grid.Row="2" Grid.Column="2" 
               Content="Введите пароль" 
               Style="{StaticResource HintLabelStyle}"
               MouseLeftButtonUp="LabelPasswordHint_MouseLeftButtonUp"/>

        <!-- Подтверждение пароля -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Подтвердите пароль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <PasswordBox x:Name="PasswordBoxSecond" 
                     Grid.Row="3" Grid.Column="1" 
                     Margin="10,5" 
                     Style="{StaticResource PasswordBoxStyle}"
                     PasswordChanged="PasswordBoxSecond_PasswordChanged"/>
        <Label x:Name="LabelPasswordSecondHint" 
               Grid.Row="3" Grid.Column="2" 
               Content="Повторите пароль" 
               Style="{StaticResource HintLabelStyle}"
               MouseLeftButtonUp="LabelPasswordSecondHint_MouseLeftButtonUp"/>

        <!-- Роль -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Роль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <ComboBox x:Name="ComboBoxRole" 
                  Grid.Row="4" Grid.Column="1" 
                  Margin="10,5" 
                  Style="{StaticResource ComboBoxStyle}">
            <ComboBoxItem Content="User"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <!-- ФИО -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="ФИО:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <TextBox x:Name="TextBoxFullName" 
                 Grid.Row="5" Grid.Column="1" 
                 Margin="10,5" 
                 Style="{StaticResource TextBoxStyle}"
                 TextChanged="TextBoxFullName_TextChanged"/>
        <Label x:Name="LabelFullNameHint" 
               Grid.Row="5" Grid.Column="2" 
               Content="Введите ФИО" 
               Style="{StaticResource HintLabelStyle}"
               MouseLeftButtonUp="LabelFullNameHint_MouseLeftButtonUp"/>

        <!-- Панель кнопок -->
        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3"
                Background="{DynamicResource HeaderBackground}" 
                CornerRadius="8" 
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" 
                        Height="50"
                        VerticalAlignment="Center">
                <Button x:Name="RegisterButton" 
                        Content="Зарегистрироваться" 
                        Click="RegisterButton_Click"
                        Style="{StaticResource BlueButtonStyle}"
                        Height="40" 
                        Width="160"
                        FontSize="14"
                        Margin="5"/>
                <Button x:Name="BackButton" 
                        Content="Назад" 
                        Click="BackButton_Click"
                        Style="{StaticResource BlueButtonStyle}"
                        Height="40" 
                        Width="120"
                        FontSize="14"
                        Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>