<Page x:Class="Khakimova.Pages.CategoryTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Categories Table" 
      Height="400" 
      Width="800"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для маленьких кнопок в DataGrid -->
        <Style x:Key="SmallBlueButtonStyle" TargetType="Button" BasedOn="{StaticResource BlueButtonStyle}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Width" Value="110"/>
        </Style>

        <!-- Стиль для DataGrid -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{DynamicResource CardBackground}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource HeaderBackground}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Стиль для строк DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
        </Style>

        <!-- Стиль для ячеек DataGrid -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для кнопок внизу страницы -->
        <Style x:Key="BottomButtonStyle" TargetType="Button" BasedOn="{StaticResource BlueButtonStyle}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Управление категориями" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource HeaderText}"
                   HorizontalAlignment="Center" 
                   Margin="10"
                   TextOptions.TextFormattingMode="Display"/>

        <DataGrid Grid.Row="1" 
                  x:Name="DataGridCategory" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="0,10,0,10"
                  SelectionMode="Single"
                  Style="{StaticResource DataGridStyle}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                  RowStyle="{StaticResource DataGridRowStyle}"
                  CellStyle="{StaticResource DataGridCellStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория" 
                                  Binding="{Binding Name}" 
                                  Width="*"/>
                <DataGridTemplateColumn Width="120" Header="Действия">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" 
                                    Content="Редактировать" 
                                    ToolTip="Редактировать данные" 
                                    Click="ButtonEdit_Click"
                                    Style="{StaticResource SmallBlueButtonStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,0"
                    Background="{DynamicResource HeaderBackground}">
            <Button x:Name="ButtonAdd" 
                    ToolTip="Добавить данные" 
                    Content="Добавить" 
                    Click="ButtonAdd_Click"
                    Style="{StaticResource BottomButtonStyle}"/>
            <Button x:Name="ButtonDel" 
                    ToolTip="Удалить данные" 
                    Content="Удалить" 
                    Click="ButtonDel_Click"
                    Style="{StaticResource BottomButtonStyle}"/>
            <Button x:Name="ButtonBack" 
                    Content="Назад" 
                    Click="ButtonBack_Click"
                    Style="{StaticResource BottomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>