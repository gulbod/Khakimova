<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="av" 
      x:Class="Khakimova.Pages.CategoryTabPage"
      Title="Categories Table" 
      Height="400" 
      Width="1094">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  x:Name="DataGridCategory" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="0,10,0,10"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Name}" Width="*"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" 
                                    Content="Редактировать" 
                                    ToolTip="Редактировать данные" 
                                    Click="ButtonEdit_Click"
                                    Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,0">
            <Button x:Name="ButtonAdd" 
                    ToolTip="Добавить данные" 
                    Content="Добавить" 
                    Click="ButtonAdd_Click"
                    Padding="15,5" 
                    Height="49" 
                    Width="134"
                    Margin="5"/>
            <Button x:Name="ButtonDel" 
                    ToolTip="Удалить данные" 
                    Content="Удалить" 
                    Click="ButtonDel_Click"
                    Padding="15,5" 
                    Height="46" 
                    Width="158"
                    Margin="5"/>
            <Button x:Name="ButtonBack" 
                    Content="Назад" 
                    Click="ButtonBack_Click"
                    Padding="15,5" 
                    Height="48" 
                    Width="143"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Page>