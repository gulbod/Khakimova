<Page x:Class="Khakimova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuthPage" Height="400" Width="600">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DictionaryDark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <!-- Основные элементы авторизации -->
        <StackPanel Orientation="Vertical"> 
        

        

            <TextBlock x:Name="txtHintLogin" 
            Text="Логин" 
            Visibility="Visible"
            Width="130"
            Grid.Column="1"
            Foreground="Gray"
            MouseLeftButtonUp="txtHintLogin_MouseLeftButtonUp" Height="20"/>


            <TextBox x:Name="TextBoxLogin" 
              Background="Transparent" 
              TextWrapping="Wrap" 
              ToolTip="Введите логин или почту" 
              TextChanged="TextBoxLogin_TextChanged"
              Height="20"  
              Width="130" 
              Grid.Column="1" />

            <TextBlock x:Name="txtHintPass" 
               Text="Пароль" 
               Visibility="Visible"
               Width="130"
               Grid.Column="1"
               Foreground="Gray"
               MouseLeftButtonUp="txtHintPass_MouseLeftButtonUp" Height="20"/>

            <Label 
                x:Name="labelPass" 
                Height="20"
                HorizontalAlignment="Center" 
                Width="130"/>

            <PasswordBox x:Name="PasswordBox" 
             Background="Transparent" 
             ToolTip="Введите пароль" 
             Width="130" 
             Height="20" 
             VerticalAlignment="Bottom" 
             PasswordChanged="PasswordBox_PasswordChanged" />


            <Button x:Name="ButtonEnter" 
            Height="20" 
            Content="Вход" 
            ToolTip="Кнопка входа" 
            Grid.Row="1"
            Width="130" 
            Click="ButtonEnter_OnClick" />

            <Button x:Name="ButtonReg" 
            Height="20" 
            Content="Регистрация" 
            ToolTip="Кнопка регистрации" 
            Grid.Row="1"
            Width="130" 
            Click="ButtonReg_Click" />

            <Button x:Name="ButtonChangePassword"  
            Height="20" 
            Content="Смена пароля" 
            ToolTip="Кнопка смены пароля" 
            Width="130" 
            Click="ButtonChangePassword_Click" />

            <!-- Элементы капчи -->
            <!-- Сам текст капчи -->
            <TextBox 
             CommandManager.PreviewExecuted="textBox_PreviewExecuted" 
             ContextMenu="{x:Null}" 
             Visibility="Hidden" 
             x:Name="captcha" 
             Height="42" 
             Foreground="Red" 
             FontStyle="Italic" 
             FontWeight="Heavy" 
             VerticalAlignment="Top" 
             Width="156" 
             Background="{x:Null}" 
             FontStretch="UltraCondensed" 
             IsReadOnly="True" 
             HorizontalContentAlignment="Center" 
             HorizontalAlignment="Right" 
             Margin="0,96,290,0" 
             VerticalContentAlignment="Center" 
             FontSize="20" Grid.ColumnSpan="2" />

            <!-- Поле для ввода капчи -->
            <TextBox Grid.Column="1" 
             Visibility="Hidden" 
             x:Name="captchaInput" 
             HorizontalAlignment="Left" 
             Height="34" 
             Margin="49,183,0,0" 
             TextWrapping="Wrap" 
             Text="" 
             VerticalAlignment="Top" 
             Width="160" />

            <!-- Кнопка подтверждения капчи -->
            <Button x:Name="submitCaptcha" 
            Margin="69,20,0,0" 
            Visibility="Hidden" 
            Height="34" 
            Content="Подтвердить" 
            ToolTip="Подтвердить ввод капчи" 
            Grid.Row="1" 
            HorizontalAlignment="Left" 
            Width="120" 
            VerticalAlignment="Top" 
            Grid.Column="1" 
            Click="submitCaptcha_Click" />

            <Label Content="Капча:"
           x:Name="labelCaptcha" 
           Margin="178,104,0,87" 
           HorizontalAlignment="Left" 
           Width="54" 
           Visibility="Hidden" />

            <!-- Дополнительные элементы для подсказок (если нужны) -->


            <Label x:Name="labelLogin" 
           Content="Логин:" 
           Margin="173,150,0,37" 
           HorizontalAlignment="Left" 
           Width="64" 
           Visibility="Visible"/>

        </StackPanel>

       

        
        
    </Grid>
</Page>