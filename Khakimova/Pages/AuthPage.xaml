<Page x:Class="Khakimova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Authorization Page"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок входа -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>

    <Grid Height="384" Width="475">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="110"/>
            <RowDefinition Height="Auto" MinHeight="55.313"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Авторизация" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource HeaderText}"
                   Margin="0,20,0,20" 
                   HorizontalAlignment="Center" 
                   Width="162"
                   TextOptions.TextFormattingMode="Display"
                   TextOptions.TextRenderingMode="ClearType"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" 
                   Text="Логин:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource CardText}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Height="17" 
                   Width="44"
                   TextOptions.TextFormattingMode="Display"/>

        <TextBox x:Name="TextBoxLogin" 
                 Grid.Row="1" Grid.Column="1" 
                 Height="35" 
                 Margin="57,8,58,7"
                 FontSize="14"
                 Foreground="{DynamicResource CardText}"
                 Background="{DynamicResource CardBackground}"
                 BorderBrush="{DynamicResource CardBorder}"
                 BorderThickness="1"
                 Padding="10,5"
                 TextChanged="TextBoxLogin_TextChanged"
                 TextOptions.TextFormattingMode="Display"/>

        <Label x:Name="TextHintLogin" 
               Grid.Row="1" Grid.Column="1" 
               Content="Введите логин" 
               Foreground="{DynamicResource CardSecondaryText}"
               FontSize="14"
               Background="Transparent"
               MouseLeftButtonUp="TextHintLogin_MouseLeftButtonUp" 
               VerticalAlignment="Top" 
               Margin="57,18,58,0" 
               Height="35" 
               Grid.ColumnSpan="2" 
               Grid.RowSpan="2"
               Padding="10,0,0,0"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="2" 
                   Text="Пароль:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource CardText}"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Height="17" 
                   Width="52"
                   TextOptions.TextFormattingMode="Display"/>

        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="2" Grid.Column="1" 
                     Height="35"
                     Margin="57,8,58,8"
                     FontSize="14"
                     Foreground="{DynamicResource CardText}"
                     Background="{DynamicResource CardBackground}"
                     BorderBrush="{DynamicResource CardBorder}"
                     BorderThickness="1"
                     Padding="10,5"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     TextOptions.TextFormattingMode="Display"/>

        <Label x:Name="TextHintPassword" 
               Grid.Row="2" Grid.Column="1" 
               Content="Введите пароль" 
               Foreground="{DynamicResource CardSecondaryText}"
               FontSize="14"
               Background="Transparent"
               MouseLeftButtonUp="TextHintPassword_MouseLeftButtonUp" 
               VerticalAlignment="Top" 
               Margin="57,22,58,0" 
               Height="35" 
               Grid.ColumnSpan="2"
               Padding="10,0,0,0" Grid.RowSpan="3"/>

        <!-- Капча -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                x:Name="CaptchaContainer" 
                Visibility="Collapsed" 
                Background="{DynamicResource CardBackground}" 
                Margin="10,10,10,10" 
                Padding="15" 
                BorderBrush="{DynamicResource AccentBrush}" 
                BorderThickness="2" 
                CornerRadius="8">
            <StackPanel>
                <TextBlock x:Name="LabelCaptcha" 
                          Text="Введите капчу:" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource CardText}"
                          Margin="0,0,0,10"
                          TextOptions.TextFormattingMode="Display"/>

                <Border Background="{DynamicResource WindowBackground}" 
                        BorderBrush="{DynamicResource CardBorder}" 
                        BorderThickness="1" 
                        Padding="15" 
                        CornerRadius="4">
                    <TextBlock x:Name="CaptchaText" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="{DynamicResource CardText}"
                              TextAlignment="Center" 
                              Margin="0,0,0,10"
                              TextOptions.TextFormattingMode="Display"/>
                </Border>

                <TextBox x:Name="CaptchaInput" 
                         Width="200" 
                         Height="35" 
                         Margin="0,10" 
                         FontSize="14"
                         Foreground="{DynamicResource CardText}"
                         Background="{DynamicResource CardBackground}"
                         BorderBrush="{DynamicResource CardBorder}"
                         BorderThickness="1"
                         Padding="10,5"
                         TextOptions.TextFormattingMode="Display"/>

                <Button x:Name="SubmitCaptchaButton" 
                        Content="Проверить капчу" 
                        Click="SubmitCaptchaButton_Click" 
                        Width="120" 
                        Height="35"
                        Margin="0,5" 
                        Style="{StaticResource BlueButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Grid.Column="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,20" 
                    Width="315">
            <Button x:Name="ButtonEnter" 
                    Content="Войти" 
                    Click="ButtonEnter_OnClick" 
                    Width="149" 
                    Height="60" 
                    Margin="5" 
                    Style="{StaticResource BlueButtonStyle}"
                    FontSize="16"/>
            <Button x:Name="ButtonReg" 
                    Content="Регистрация" 
                    Click="ButtonReg_Click" 
                    Width="146" 
                    Height="53" 
                    Margin="5" 
                    Style="{StaticResource BlueButtonStyle}"
                    FontSize="14"/>
        </StackPanel>

        <!-- Кнопка смены пароля -->
        <Button Grid.Row="5" Grid.Column="1" 
                x:Name="ButtonChangePassword" 
                Content="Сменить пароль" 
                Click="ButtonChangePassword_Click" 
                Width="198" 
                Height="40" 
                Margin="0,13,0,-13" 
                HorizontalAlignment="Center" 
                Style="{StaticResource BlueButtonStyle}"
                FontSize="14"/>
    </Grid>
</Page>