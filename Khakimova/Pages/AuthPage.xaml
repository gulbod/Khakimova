<Page x:Class="Khakimova.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Authorization Page">

    <Grid Background="White" Height="384" Width="475">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="110"/>
            <RowDefinition Height="Auto" MinHeight="55.313"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,20,0,20" HorizontalAlignment="Center" Width="162"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" Text="Логин:" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Height="17" Width="44"/>
        <TextBox x:Name="TextBoxLogin" Grid.Row="1" Grid.Column="1" Height="NaN" Margin="57,8,58,7" 
                 TextChanged="TextBoxLogin_TextChanged"/>
        <Label x:Name="TextHintLogin" Grid.Row="1" Grid.Column="1" Content="Введите логин" Foreground="Gray" 
               MouseLeftButtonUp="TextHintLogin_MouseLeftButtonUp" VerticalAlignment="Top" Margin="57,3,28,0" Height="45" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="2" Text="Пароль:" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Height="17" Width="52"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="57,8,58,8"
                     PasswordChanged="PasswordBox_PasswordChanged"/>
        <Label x:Name="TextHintPassword" Grid.Row="1" Grid.Column="1" Content="Введите пароль" Foreground="Gray"
               MouseLeftButtonUp="TextHintPassword_MouseLeftButtonUp" VerticalAlignment="Top" Margin="57,39,28,0" Height="46" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!-- Капча -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CaptchaContainer" Visibility="Collapsed" 
                Background="LightYellow" Margin="10,10,10,100" Padding="10" BorderBrush="Gray" BorderThickness="1" Grid.RowSpan="2">
            <StackPanel>
                <TextBlock x:Name="LabelCaptcha" Text="Введите капчу:" FontSize="14" Margin="0,0,0,5"/>
                <TextBlock x:Name="CaptchaText" FontSize="18" FontWeight="Bold" Background="White" Padding="10" 
                          TextAlignment="Center" Margin="0,0,0,5"/>
                <TextBox x:Name="CaptchaInput" Width="200" Height="30" Margin="0,5"/>
                <Button x:Name="SubmitCaptchaButton" Content="Проверить капчу" Click="SubmitCaptchaButton_Click" 
                       Width="120" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20" Width="315">
            <Button x:Name="ButtonEnter" Content="Войти" Click="ButtonEnter_OnClick" Width="149" Height="60" Margin="5"/>
            <Button x:Name="ButtonReg" Content="Регистрация" Click="ButtonReg_Click" Width="146" Height="53" Margin="5"/>
        </StackPanel>

        <!-- Кнопка смены пароля -->
        <Button Grid.Row="5" Grid.Column="1" x:Name="ButtonChangePassword" Content="Сменить пароль" 
               Click="ButtonChangePassword_Click" Width="198" Height="NaN" Margin="0,13,0,-13" HorizontalAlignment="Center"/>
    </Grid>
</Page>