<Page x:Class="Khakimova.Pages.DiagramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Diagrams and Analytics">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="CmbUser" DisplayMemberPath="FIO" Width="200" Margin="0,0,20,0"
                      SelectionChanged="UpdateChart"/>

            <TextBlock Text="Тип визуализации:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="CmbDiagram" Width="150" Margin="0,0,20,0"
                      SelectionChanged="UpdateChart"/>

            <Button x:Name="BtnExportExcel" Content="Экспорт в Excel" Click="BtnExportExcel_Click"
                    Width="120" Margin="0,0,10,0"/>
            <Button x:Name="BtnExportWord" Content="Экспорт в Word" Click="BtnExportWord_Click"
                    Width="120" Margin="0,0,10,0"/>
            <Button x:Name="BtnBack" Content="Назад" Click="BtnBack_Click"
                    Width="80"/>
        </StackPanel>

        <!-- Визуализация данных -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ChartTitle" Text="Статистика платежей" 
                          FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

                <!-- Графическое представление данных -->
                <ItemsControl x:Name="ChartVisualization" Grid.Row="1" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightBlue" BorderThickness="1" Margin="2" Padding="5" CornerRadius="3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Category}" FontWeight="Bold" Grid.ColumnSpan="2"/>

                                    <!-- Визуальное представление суммы -->
                                    <Border Grid.Row="1" Grid.Column="0" Background="LightBlue" 
                                            HorizontalAlignment="Left" Height="15" 
                                            Width="{Binding BarWidth}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Amount, StringFormat={}{0:C}}" 
                                               Foreground="Green" Margin="5,0,0,0" FontWeight="Bold"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="TotalText" Grid.Row="2" FontSize="14" FontWeight="Bold" 
                          Margin="10" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Page>