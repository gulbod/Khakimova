<Page x:Class="Khakimova.Pages.DiagramPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Diagrams and Analytics"
      Background="White">

    <Page.Resources>
        <!-- Стили для элементов управления -->
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для карточек данных -->
        <Style x:Key="DataCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <!-- Стиль для полосы прогресса -->
        <Style x:Key="ProgressBarStyle" TargetType="Border">
            <Setter Property="Height" Value="15"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для заголовка диаграммы -->
        <Style x:Key="ChartTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стиль для итоговой суммы -->
        <Style x:Key="TotalTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стиль для основного контейнера -->
        <Style x:Key="MainBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Стиль для элемента списка круговой диаграммы -->
        <Style x:Key="PieChartListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="Transparent" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Цветной квадрат категории -->
                                <Border Grid.Column="0" 
                                        Width="16" 
                                        Height="16" 
                                        Background="{Binding Color}"
                                        Margin="0,0,10,0"
                                        CornerRadius="2"/>

                                <!-- Название категории -->
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Category}" 
                                           VerticalAlignment="Center"
                                           Foreground="Black"
                                           FontSize="12"/>

                                <!-- Сумма -->
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Amount, StringFormat={}{0:C}}" 
                                           VerticalAlignment="Center"
                                           Foreground="#27AE60"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной заголовок -->
        <TextBlock Grid.Row="0" 
                   x:Name="MainChartTitle"
                   Text="Распределение платежей по категориям" 
                   Style="{StaticResource ChartTitleStyle}"
                   Margin="0,0,0,10"/>

        <!-- Панель управления -->
        <Border Grid.Row="1" 
                Background="#E1E1E1" 
                Margin="0,0,0,10" 
                Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пользователь:" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbUser" DisplayMemberPath="FIO" Width="200" Margin="0,0,20,0"
                          Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="UpdateChart"
                          IsReadOnly="True"/>

                <TextBlock Text="Тип визуализации:" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,0,10,0"/>
                <ComboBox x:Name="CmbDiagram" Width="150" Margin="0,0,20,0"
                          Style="{StaticResource ComboBoxStyle}"
                          SelectionChanged="UpdateChart"
                          IsReadOnly="True"/>

                <Button x:Name="BtnExportExcel" Content="Экспорт в Excel" Click="BtnExportExcel_Click"
                        Width="120" Margin="0,0,10,0" Style="{StaticResource ButtonStyle}"/>
                <Button x:Name="BtnExportWord" Content="Экспорт в Word" Click="BtnExportWord_Click"
                        Width="120" Margin="0,0,10,0" Style="{StaticResource ButtonStyle}"/>
                <Button x:Name="BtnBack" Content="Назад" Click="BtnBack_Click"
                        Width="80" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Визуализация данных -->
        <Border Grid.Row="2" Style="{StaticResource MainBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Контейнер для диаграмм -->
                <Grid Grid.Row="0" Margin="10">

                    <!-- Столбчатая диаграмма -->
                    <ScrollViewer x:Name="BarChartScroll" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <ItemsControl x:Name="BarChartVisualization">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource DataCardStyle}" Margin="0,5">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="25"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Category}" FontWeight="Bold" Grid.ColumnSpan="2"
                                                           Foreground="Black" FontSize="12" Margin="0,0,0,5"/>

                                                <!-- Визуальное представление суммы -->
                                                <Border Grid.Row="1" Grid.Column="0" 
                                                        Style="{StaticResource ProgressBarStyle}"
                                                        HorizontalAlignment="Left">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="{Binding Color}" Offset="0"/>
                                                            <GradientStop Color="{Binding DarkColor}" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Width>
                                                        <Binding Path="BarWidth"/>
                                                    </Border.Width>
                                                </Border>

                                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                                           Text="{Binding Amount, StringFormat={}{0:C}}" 
                                                           Foreground="#27AE60" Margin="5,0,0,0" 
                                                           FontWeight="Bold" FontSize="11"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Круговая диаграмма (как на изображении) -->
                    <Grid x:Name="PieChartScroll" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Круговая диаграмма -->
                        <Canvas x:Name="PieChartCanvas" Grid.Column="0" 
                                Width="300" Height="300" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>

                        <!-- Легенда (список категорий) -->
                        <Border Grid.Column="1" 
                                Background="#F5F5F5"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="20,0,0,0"
                                Padding="15"
                                Width="250">
                            <ListBox x:Name="PieChartLegend"
                                     ItemContainerStyle="{StaticResource PieChartListItemStyle}"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                    Width="16" 
                                                    Height="16" 
                                                    Background="{Binding Color}"
                                                    Margin="0,0,10,0"
                                                    CornerRadius="2"/>

                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Category}" 
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       FontSize="12"/>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Amount, StringFormat={}{0:C}}" 
                                                       VerticalAlignment="Center"
                                                       Foreground="#27AE60"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Margin="10,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>
                    </Grid>

                </Grid>

                <TextBlock x:Name="TotalText" Grid.Row="1" Style="{StaticResource TotalTextStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Page>