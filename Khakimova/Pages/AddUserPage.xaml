<Page x:Class="Khakimova.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Khakimova.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="AddEditUserPage"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="8,4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>

        <!-- Стиль для полей ввода -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для блока предпросмотра -->
        <Style x:Key="PreviewBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource HeaderBackground}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для текста предпросмотра -->
        <Style x:Key="PreviewTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource CardSecondaryText}"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для текста названия фото -->
        <Style x:Key="PhotoNameTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{DynamicResource CardSecondaryText}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="2,3,2,0"/>
        </Style>

        <!-- Стиль для подписи предпросмотра -->
        <Style x:Key="PreviewLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Foreground" Value="{DynamicResource CardSecondaryText}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для нижней панели -->
        <Style x:Key="BottomPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource HeaderBackground}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="80" />
            <RowDefinition Height="100" />
            <RowDefinition Height="25" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Заголовки -->
        <TextBlock Text="Логин:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <!-- Убрано поле пароля -->
        <TextBlock Text="Роль:" Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <TextBlock Text="ФИО:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelStyle}"/>
        <TextBlock Text="Фото:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelStyle}"/>

        <!-- Поля ввода -->
        <TextBox x:Name="LoginTextBox" Grid.Row="0" Grid.Column="1" 
                 Style="{StaticResource InputStyle}" Margin="5,5,5,0" ToolTip="Введите логин"/>

        <!-- Убрано поле пароля -->

        <ComboBox x:Name="RoleComboBox" Grid.Row="1" Grid.Column="1" 
                  Style="{StaticResource ComboBoxStyle}" Margin="5,5,5,0" ToolTip="Выберите роль">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="User"/>
        </ComboBox>

        <TextBox x:Name="FioTextBox" Grid.Row="2" Grid.Column="1" 
                 Style="{StaticResource InputStyle}" Margin="5,5,5,0" ToolTip="Введите ФИО"/>

        <!-- Секция выбора фото -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="5,2,5,2">
            <Button x:Name="SelectPhotoButton" Content="📷 Выбрать фото" 
                    Click="SelectPhotoButton_Click"
                    Style="{StaticResource BlueButtonStyle}" Width="160" HorizontalAlignment="Left" Height="32"/>
            <TextBlock x:Name="PhotoNameTextBlock" Text="Фото не выбрано" 
                      Style="{StaticResource PhotoNameTextStyle}"/>
        </StackPanel>

        <!-- Область предпросмотра фото -->
        <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource PreviewBorderStyle}" 
                Width="180" Height="90" Margin="5,2,5,2">
            <Grid>
                <Image x:Name="UserPhotoImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"
                       MaxHeight="75" MaxWidth="160" Margin="5"/>
                <TextBlock x:Name="NoImagePreviewText" Text="Предпросмотр фото" 
                          Style="{StaticResource PreviewTextStyle}"/>
            </Grid>
        </Border>

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Предпросмотр" 
                  Style="{StaticResource PreviewLabelStyle}"/>

        <!-- Панель кнопок -->
        <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                Style="{StaticResource BottomPanelStyle}"
                Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="5">
                <Button x:Name="SaveButton" Content="💾 Сохранить" 
                        Click="SaveButton_Click"
                        Style="{StaticResource BlueButtonStyle}" Width="120" Margin="3" Height="32"/>
                <Button x:Name="ClearButton" Content="🗑️ Очистить" 
                        Click="ClearButton_Click"
                        Style="{StaticResource BlueButtonStyle}" Width="100" Margin="3" Height="32"/>
                <Button x:Name="BackButton" Content="← Назад" 
                        Click="BackButton_Click"
                        Style="{StaticResource BlueButtonStyle}" Width="90" Margin="3" Height="32"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>