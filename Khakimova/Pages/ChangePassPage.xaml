<Page x:Class="Khakimova.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Change Password" Height="645" Width="567"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для информационного текста -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="{DynamicResource HintText}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderText}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Смена пароля" 
                   Style="{StaticResource HeaderTextStyle}"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Логин:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <TextBox x:Name="TbLogin" 
                 Grid.Row="1" Grid.Column="1" 
                 Margin="10,5" 
                 Style="{StaticResource TextBoxStyle}"
                 ToolTip="Введите ваш логин"/>

        <!-- Текущий пароль -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Текущий пароль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <PasswordBox x:Name="CurrentPasswordBox" 
                     Grid.Row="2" Grid.Column="1" 
                     Margin="10,5" 
                     Style="{StaticResource PasswordBoxStyle}"
                     ToolTip="Введите текущий пароль"/>

        <!-- Новый пароль -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Новый пароль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <PasswordBox x:Name="NewPasswordBox" 
                     Grid.Row="3" Grid.Column="1" 
                     Margin="10,5" 
                     Style="{StaticResource PasswordBoxStyle}"
                     ToolTip="Введите новый пароль"/>

        <!-- Подтверждение нового пароля -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Подтвердите новый пароль:" 
                   Style="{StaticResource TextBlockStyle}"
                   Margin="0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" 
                     Grid.Row="4" Grid.Column="1" 
                     Margin="10,5" 
                     Style="{StaticResource PasswordBoxStyle}"
                     ToolTip="Повторите новый пароль"/>

        <!-- Информация о требованиях к паролю -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Пароль должен содержать минимум 6 символов, только английские буквы и хотя бы одну цифру" 
                   Style="{StaticResource InfoTextStyle}"
                   Margin="0,10,0,5"/>

        <!-- Панель кнопок -->
        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                Background="{DynamicResource HeaderBackground}" 
                CornerRadius="8" 
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" 
                        Height="50"
                        VerticalAlignment="Center">
                <Button x:Name="ButtonSave" 
                        Content="Сохранить" 
                        Click="ButtonSave_Click"
                        Style="{StaticResource BlueButtonStyle}"
                        Height="40" 
                        Width="140"
                        FontSize="14"
                        Margin="5"/>
                <Button x:Name="ButtonBack" 
                        Content="Назад" 
                        Click="ButtonBack_Click"
                        Style="{StaticResource BlueButtonStyle}"
                        Height="40" 
                        Width="120"
                        FontSize="14"
                        Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>