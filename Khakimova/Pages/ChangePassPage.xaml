<Page x:Class="Khakimova.Pages.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Change Password" Height="400" Width="500">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Смена пароля" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Логин -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Логин:" FontSize="14" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TbLogin" Grid.Row="1" Grid.Column="1" Margin="10,5" Height="30" FontSize="14"
                 ToolTip="Введите ваш логин"/>

        <!-- Текущий пароль -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Текущий пароль:" FontSize="14" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="CurrentPasswordBox" Grid.Row="2" Grid.Column="1" Margin="10,5" Height="30"
                     ToolTip="Введите текущий пароль"/>

        <!-- Новый пароль -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Новый пароль:" FontSize="14" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="3" Grid.Column="1" Margin="10,5" Height="30"
                     ToolTip="Введите новый пароль"/>

        <!-- Подтверждение нового пароля -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Подтвердите новый пароль:" FontSize="14" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="4" Grid.Column="1" Margin="10,5" Height="30"
                     ToolTip="Повторите новый пароль"/>

        <!-- Информация о требованиях к паролю -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="Пароль должен содержать минимум 6 символов, только английские буквы и хотя бы одну цифру" 
                   FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,10,0,5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="ButtonSave" Content="Сохранить" Click="ButtonSave_Click" 
                    Width="138" Height="53" Margin="10" Padding="10,5"/>
            <Button x:Name="ButtonBack" Content="Назад" Click="ButtonBack_Click" 
                    Width="130" Height="47" Margin="10" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>