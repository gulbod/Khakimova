<Page x:Class="Khakimova.Pages.PaymentTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Платежи" Height="400" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="380*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" x:Name="DataGridPayment" 
                  AutoGenerateColumns="False" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="80"/>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Users.FIO}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Num}" Width="80"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="120"/>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" Content="Редактировать" 
                                    ToolTip="Редактировать данные" Click="ButtonEdit_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" x:Name="ButtonAdd" ToolTip="Добавить данные" 
                Content="Добавить" HorizontalAlignment="Left" Click="ButtonAdd_Click" Width="50" Height="20"/>
        <Button Grid.Row="1" x:Name="ButtonDel" ToolTip="Удалить данные" 
                Content="Удалить" HorizontalAlignment="Right" Click="ButtonDel_Click" Width="50" Height="20"/>
    </Grid>
</Page>