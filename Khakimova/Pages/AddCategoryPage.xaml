<Page x:Class="Khakimova.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add/Edit Category" Height="240" Width="450"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <!-- Стиль для текстовых блоков -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource HeaderText}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        </Style>

        <!-- Стиль для кнопок внизу страницы -->
        <Style x:Key="BottomButtonStyle" TargetType="Button" BasedOn="{StaticResource BlueButtonStyle}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название категории" 
                   Grid.Row="0" 
                   Style="{StaticResource HeaderTextStyle}"
                   Margin="10,10,10,5"
                   HorizontalAlignment="Left"/>

        <TextBox x:Name="TbCategoryName" 
                 Grid.Row="1" 
                 Margin="10,5,10,10"
                 Style="{StaticResource TextBoxStyle}"/>

        <Border Grid.Row="2" 
                Background="{DynamicResource HeaderBackground}" 
                CornerRadius="8" 
                Margin="10,15,10,10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                <Button x:Name="ButtonSaveCategory" 
                        Content="Сохранить" 
                        Click="ButtonSaveCategory_Click" 
                        Style="{StaticResource BottomButtonStyle}"/>
                <Button x:Name="ButtonClean" 
                        Content="Очистить" 
                        Click="ButtonClean_Click" 
                        Style="{StaticResource BottomButtonStyle}"/>
                <Button x:Name="ButtonBack" 
                        Content="Назад" 
                        Click="ButtonBack_Click" 
                        Style="{StaticResource BottomButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>