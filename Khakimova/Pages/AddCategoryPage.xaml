<Page x:Class="Khakimova.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add/Edit Category" Height="240" Width="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название категории" 
                   Grid.Row="0" 
                   FontSize="18" 
                   Margin="10,10,10,5"
                   HorizontalAlignment="Left"
                   FontWeight="Bold"/>

        <TextBox x:Name="TbCategoryName" 
                 Grid.Row="1" 
                 Margin="10,5,10,10"
                 FontSize="14"
                 Height="35"
                 VerticalContentAlignment="Center"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10,15,10,10">
            <Button x:Name="ButtonSaveCategory" 
                    Content="Сохранить" 
                    Click="ButtonSaveCategory_Click" 
                    Margin="5"
                    Padding="10,8"
                    Height="59" 
                    Width="120"
                    FontSize="14"/>
            <Button x:Name="ButtonClean" 
                    Content="Очистить" 
                    Click="ButtonClean_Click" 
                    Margin="5"
                    Padding="10,8"
                    Height="56" 
                    Width="120"
                    FontSize="14"/>
            <Button x:Name="ButtonBack" 
                    Content="Назад" 
                    Click="ButtonBack_Click" 
                    Margin="5"
                    Padding="10,8"
                    Height="55" 
                    Width="120"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>