<Page x:Class="Khakimova.Pages.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Users Table">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" 
                  x:Name="DataGridUser" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="120"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="80"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="200"/>
                <DataGridTextColumn Header="Фото" Binding="{Binding Photo}" Width="100"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" 
                                    Content="Редактировать" 
                                    ToolTip="Редактировать данные" 
                                    Click="ButtonEdit_Click"
                                    Padding="5,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ButtonAdd" 
                    ToolTip="Добавить данные" 
                    Content="Добавить" 
                    Click="ButtonAdd_Click"
                    Margin="10"
                    Padding="15,5" Height="51" Width="156"/>
            <Button x:Name="ButtonDel" 
                    ToolTip="Удалить данные" 
                    Content="Удалить" 
                    Click="ButtonDel_Click"
                    Margin="10"
                    Padding="15,5" Height="48" Width="128"/>
        </StackPanel>
    </Grid>
</Page>