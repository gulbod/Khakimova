<Page x:Class="Khakimova.Pages.AddPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление платежа" 
      Height="500" 
      Width="600"
      Background="{DynamicResource ContentBackground}">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource LoginButtonBackground}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource LoginButtonPressed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для комбобоксов -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для датапикера -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CardText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource HeaderText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для кнопок внизу -->
        <Style x:Key="BottomButtonStyle" TargetType="Button" BasedOn="{StaticResource BlueButtonStyle}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="PageTitle"
                   Text="Добавление платежа" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource HeaderText}"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   TextOptions.TextFormattingMode="Display"/>

        <!-- Форма ввода -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Пользователь -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Пользователь:" 
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,15,15"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      x:Name="UserNameComboBox"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,0,15"/>

            <!-- Категория -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Категория:" 
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,15,15"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      x:Name="CategoryComboBox"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,0,15"/>

            <!-- Сумма -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Сумма (руб.):" 
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,15,15"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     x:Name="AmountTextBox"
                     Style="{StaticResource TextBoxStyle}"
                     PreviewTextInput="AmountTextBox_PreviewTextInput"
                     Margin="0,0,0,15"/>

            <!-- Дата -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Дата:" 
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,15,15"/>
            <DatePicker Grid.Row="3" Grid.Column="1" 
                        x:Name="DatePicker"
                        Style="{StaticResource DatePickerStyle}"
                        Margin="0,0,0,15"/>

            <!-- Статус -->
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Статус:" 
                       Style="{StaticResource LabelStyle}"
                       Margin="0,0,15,15"/>
            <ComboBox Grid.Row="4" Grid.Column="1" 
                      x:Name="StatusComboBox"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,0,15"/>
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    Style="{StaticResource BottomButtonStyle}"/>
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Style="{StaticResource BottomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>